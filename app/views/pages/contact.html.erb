<h1 class="text-center my-4">Contactez-nous</h1>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-md-6">
    <%= simple_form_for :contact, url: contact_path, method: :post, html: { class: 'border p-4 rounded shadow-sm bg-light' } do |f| %>
      <%= f.input :name, label: 'Nom', input_html: { class: 'form-control' } %>
      <%= f.input :email, label: 'Email', input_html: { class: 'form-control', type: 'email' } %>
      <%= f.input :message, label: 'Message', as: :text, input_html: { class: 'form-control', rows: 5 } %>

      <%= f.button :submit, 'Envoyer', class: 'btn btn-primary btn-block mt-3' %>
    <% end %>
  </div>
</div>

